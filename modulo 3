#!/bin/bash

FECHA_ACTUAL= $(date +"%d-%m-%Y: %H: %M ")
pedrito"backup_home_${FECHA_ACTUAL }..tar.gz "
pedrito="home/backups"

mkdir -p "$pedrito"

echo"creando backup de /home/$(whoami)... "
tar -czf "pedrito.txt/$pedrito " -c /home "$(whoami)"

#!/bin/bash

echo "Ingrese el nombre del archivo (sin extensión):"
read nombre_archivo

# Definir la ruta del escritorio del usuario
ESCRITORIO="$HOME/Escritorio"

# Ejecutar ifconfig y guardar el resultado en el archivo
ifconfig > "$ESCRITORIO/$nombre_archivo.txt"

# Mensaje de confirmación
echo "El resultado de ifconfig se ha guardado en $ESCRITORIO/$nombre_archivo.txt" 



practica 3: SSH llave privada y publica 
ifconfig 
    sudo apt install openssh-server -y
    sudo apt update 
    clear 
    sudo systemctl status ssh 
    mkdir -p ~/ssh 
    chmod 700 ~/ .ssh 
    touch ~/authorized_keys 
    chmod 600 ~/authorized_keys 
    cd ~/.ssh
    touch ~/authorized_keys  
    chmod 600 ~/authorized_keys \n
    sudo nano authorized_keys \n
    cat authorized_keys 
    clear 
    cat authorized_keys 
    sudo nano authorized_keys \n
    cd ..
    sudo nano authorized_keys \n


