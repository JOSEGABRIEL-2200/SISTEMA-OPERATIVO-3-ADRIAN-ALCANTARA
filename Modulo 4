Práctica 3: Instalación y Configuración de un Servidor de Impresión CUPS
49  sudo apt update \n
   50  sudo apt install cups printer-driver-cups-pdf ufw ssh -y
   51  sudo usermod -aG lpadmin gabriel
   52  sudo reboot 
   53  sudo systemctl enable cups && sudo systemctl start cups 
   54  sudo systemctl enable cups && sudo systemctl start cups ssh 
   55  sudo ufw enable 
   56  sudo ufw allow 631/tcp
   57  sudo ufw allow ssh
   58  sudo cupsctl --remote-admin --share-printers 
   59  sudo systemctl restart cups 
   60  ip a
