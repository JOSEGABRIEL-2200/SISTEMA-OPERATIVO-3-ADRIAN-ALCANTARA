global_defs {
    router_id KALI_SRV1
}

vrrp_instance VI_1 {
    state MASTER
    interface eth0        # Confirma tu interfaz real
    virtual_router_id 51  # ID del grupo (debe ser el mismo en ambos)
    priority 101          # Más alto para ser MASTER
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass secret
    }
    virtual_ipaddress {
        10.0.0.155/24     # La IP Flotante
    }
}


