global_defs {
    router_id KALI_SRV2
}

vrrp_instance VI_1 {
    state BACKUP
    interface eth0        # Confirma tu interfaz real
    virtual_router_id 51
    priority 100          # Más bajo para ser BACKUP
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass secret
    }
    virtual_ipaddress {
        10.0.0.155/24     # La IP Flotante
    }
}
  
